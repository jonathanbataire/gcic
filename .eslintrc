{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
      "indent": ["error",2],
      "linebreak-style": ["error","unix"],
      "semi": ["error","always"],
      "max-len": "off",
      "no-console": "off",
      "no-debugger": "off",
      "quotes": ["error", "single", { "allowTemplateLiterals": true, "avoidEscape": true }],
      "space-before-function-paren": ["error","always"],
      "no-multiple-empty-lines": "error"
    }
}
